{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {"*": ["types/*"]},
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "watch": false,
    "strictNullChecks": true
  },
  "include": ["./**/*", "prettier.config.js"],
  "exclude": ["prettier.config.js", "./build/*"]
}
